{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "rootDir": "src",
        "target": "es2015"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules/**",
        "node_modules/**/*"
    ]
}